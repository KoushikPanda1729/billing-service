{
    "name": "billing-service",
    "version": "1.0.0",
    "description": "The billing service for managing transactions",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "nodemon --exec tsx src/server.ts",
        "build": "esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --external:express --external:mongoose --external:mongoose-aggregate-paginate-v2 --external:kafkajs --external:cookie-parser --external:cors --external:express-jwt --external:express-validator --external:http-errors --external:jwks-rsa --external:winston --external:config --external:js-yaml --external:dotenv --external:razorpay --external:stripe",
        "format:fix": "npx prettier . --write \"src/**/*.ts\"",
        "format:check": "npx prettier . --check \"src/**/*.ts\"",
        "lint:fix": "npx eslint . --fix \"src/**/*.ts\"",
        "lint:check": "npx eslint . \"src/**/*.ts\"",
        "test": "jest --watch --runInBand",
        "prepare": "husky"
    },
    "keywords": [
        "Auth",
        "service"
    ],
    "author": "Koushik",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/cookie-parser": "^1.4.10",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/express-jwt": "^6.0.4",
        "@types/http-errors": "^2.0.5",
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "@types/winston": "^2.4.4",
        "esbuild": "^0.25.0",
        "eslint": "^9.39.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.11",
        "prettier": "3.7.4",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    },
    "dependencies": {
        "@types/config": "^3.3.5",
        "js-yaml": "^4.1.0",
        "@types/mongoose-aggregate-paginate-v2": "^1.0.12",
        "config": "^4.1.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-jwt": "^8.5.1",
        "express-validator": "^7.3.1",
        "http-errors": "^2.0.1",
        "jwks-rsa": "^3.2.0",
        "kafkajs": "^2.2.4",
        "mongoose": "^9.1.2",
        "mongoose-aggregate-paginate-v2": "^1.1.4",
        "razorpay": "^2.9.6",
        "stripe": "^20.2.0",
        "supertest": "^7.1.4",
        "winston": "^3.18.3"
    }
}
